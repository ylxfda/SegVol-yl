    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "infer",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/",
            "program": "./inference_demo.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2,3",
            },
            "args": [
                "--resume", "/data/home/yli/projects/CLIP-SAM/pretrained/SegVol_v1.pth",
                "-work_dir", "/data/home/yli/projects/CLIP-SAM/work_dir",
                "--demo_config", "./config/config_demo.json",
            ]
        },

        {
            "name": "build_dataset",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/",
            "program": "data_process/train_data_process.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2,3",
            },
            "args": [
                "-image_dir", "/data/DataSSD3/yli/data/FLARE22Train/images",
                "-label_dir", "/data/DataSSD3/yli/data/FLARE22Train/labels",
                "-dataset_code", "0001",
                "-save_root", "/data/DataSSD3/yli/data/FLARE22Train/clip-sam",
                "-test_ratio", "0.05"
            ]
        },

        {
            "name": "build_pseduo_mask",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/",
            "program": "data_process/pseudo_mask_process.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2,3",
            },
            "args": [
                "-dataset_code", "0001",
                "-datasets_root", "/data/DataSSD3/yli/data/FLARE22Train/clip-sam",
            ]
        },

        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/",
            "program": "train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2,3",
            },
            "args": [
                "--resume", "/data/home/yli/projects/CLIP-SAM/pretrained/SegVol_v1.pth",
                "-work_dir", "work_dir",
                "--data_dir", "/data/DataSSD3/yli/data/FLARE22Train/clip-sam/",
                // "--dataset_codes", "0001",
            ]
        },
    ]
}